
@{
    ViewBag.Title = "Index";
Layout="~/Views/Shared/HR.cshtml";
}

<h2>Index</h2>
<div class="container">
    <hr />
    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#myModal" onclick="nuke();">Create New</button><br /><br /> @*kalau tombol ini di klik ntar ngeload otomatis dropdown suppliernya*@
    <table class="table table-hover" id="table">
        <thead>
            <tr>
                <th>
                    Name
                </th>
                <th>
                    Position
                </th>
                <th>
                    Description
                </th>
                <th>
                    Start Date
                </th>
                <th>
                   End Date
                </th>
                <th>
                    Student
                </th>
                <th>
                    Action
                </th>
            </tr>
        </thead>
        <tbody class="tbody"></tbody>
    </table>
</div>
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">×</button>
                <h4 class="modal-title" id="myModalLabel">Work Experience Form</h4>
            </div>
            <div class="modal-body">
                <form>
                    <div class="form-group">
                        <label for="Id">Id</label>
                        <input type="text" class="form-control" id="Id" placeholder="Id" disabled="disabled" />
                    </div>
                    <div class="form-group">
                        <label for="Name">Name</label>
                        <input type="text" class="form-control" id="Name" placeholder="Name" />
                        <span style="color:red" class="error">Valid Name required</span>
                    </div>
                    <div class="form-group">
                        <label for="Position">Position</label>
                        <input type="text" class="form-control" id="Position" placeholder="Position" />
                        <span style="color:red" class="error">Valid Position required</span>
                    </div>
                    <div class="form-group">
                        <label for="Description">Description</label>
                        <input type="text" class="form-control" id="Description" placeholder="Description" />
                        <span style="color:red" class="error">Valid Description required</span>
                    </div>
                    <div class="form-group">
                        <label for="DateStart">Date Start</label>
                        <input type="text" class="form-control" id="DateStart" maxlength="10" placeholder="DateStart" />
                        <span style="color:red" class="error">Valid Date Start required (ex: mm/dd/yyyy)</span>
                    </div>
                    <div class="form-group">
                        <label for="DateEnd">Date End</label>
                        <input type="text" class="form-control" id="DateEnd" maxlength="10" placeholder="DateEnd" />
                        <span style="color:red" class="error">Valid Date End required (ex: mm/dd/yyyy)</span>
                    </div>
                    <div class="form-group">
                        <label for="Students_Id">Student</label>
                        <select id="Student" data-placement="Choose Student" class="form-control">
                            <option>Select</option>
                        </select>
                        <span style="color:red" class="error">Select Student</span>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" id="Save" onclick="validationInsert();">Save</button>
                <button type="button" class="btn btn-primary" id="Update" style="display:none;" onclick="validationUpdate();">Update</button>
                <button type="button" class="btn btn-default" onclick="nuke();" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/Scripts/SweetAlert/sweetalert.min.js"></script>
    <link href="~/Scripts/SweetAlert/sweetalert.css" rel="stylesheet" />
    <script src="~/Scripts/DataTable/jquery.dataTables.min.js"></script>
    <link href="~/Scripts/DataTable/jquery.dataTables.min.css" rel="stylesheet" />
    <script src="~/Scripts/Retrieves/RetrievingWorkExperience.js"></script>
    <script type="text/javascript">
        $(function () {
            $('#DateStart').datepicker({
                format: "mm/dd/yyyy"
            })
        })
        $(function () {
            $('#DateEnd').datepicker({
                format: "mm/dd/yyyy"
            })
        })
</script> 

    @Scripts.Render("~/bundles/jqueryval")
}


