@{
    ViewBag.Title = "Index";
Layout="~/Views/Shared/Mentor.cshtml";
}

<h2>Class</h2>

<div class="container">
    <hr />
    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#myModal" onclick="nuke();">Create New</button><br /><br /> @*kalau tombol ini di klik ntar ngeload otomatis dropdown suppliernya*@
    <table class="table table-hover" id="table">
        <thead>
            <tr>

                <th>
                    Lesson
                </th>
                <th>
                    Class
                </th>
                <th>
                    Room
                </th>
                <th>
                    Date Start
                </th>
                <th>
                    Date End
                </th>
                <th>
                    Action
                </th>
            </tr>
        </thead>
        <tbody class="tbody"></tbody>
    </table>
</div>
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">×</button>
                <h4 class="modal-title" id="myModalLabel">Class Form</h4>
            </div>
            <div class="modal-body">
                <form>
                    <div class="form-group">
                        <label for="Id">Id</label>
                        <input type="text" class="form-control" id="Id" placeholder="Id" disabled="disabled" />
                    </div>
                    <div class="form-group">
                        <label for="Lesson_Id">Lesson</label>
                        <select id="Lesson" data-placement="Choose Lesson" class="form-control">
                            <option>Select</option>
                        </select>
                        <span style="color:red" class="error">Select Lesson</span>
                    </div>
                    <div class="form-group">
                        <label for="Class">Class</label>
                        <select id="Class" data-placement="Choose Class" class="form-control">
                            <option>Select</option>
                        </select>
                        <span style="color:red" class="error">Select Class</span>
                    </div>
                    <div class="form-group">
                        <label for="Room">Room</label>
                        <select id="Room" data-placement="Choose Room" class="form-control">
                            <option>Select</option>
                        </select>
                        <span style="color:red" class="error">Select Room</span>
                    </div>
                    <div class="form-group">
                        <label for="DateStart">Date Start</label>
                        <input type="text" class="form-control" id="DateStart" placeholder="Date Start" />
                        <span style="color:red" class="error">Valid DateStart required</span>
                    </div>
                    <div class="form-group">
                        <label for="DateEnd">Date End</label>
                        <input type="text" class="form-control" id="DateEnd" placeholder="Date End" />
                        <span style="color:red" class="error">Valid DateEnd required</span>
                    </div>
                    
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" id="Save" onclick="validationInsert();">Save</button>
                <button type="button" class="btn btn-primary" id="Update" style="display:none;" onclick="validationUpdate();">Update</button>
                <button type="button" class="btn btn-default" onclick="nuke();" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>


@section Scripts {
<script src="~/Scripts/SweetAlert/sweetalert.min.js"></script>
<link href="~/Scripts/SweetAlert/sweetalert.css" rel="stylesheet" />
<script src="~/Scripts/DataTable/jquery.dataTables.min.js"></script>
<link href="~/Scripts/DataTable/jquery.dataTables.min.css" rel="stylesheet" />
<script src="~/Scripts/Retrieves/RetrievingSchedule.js"></script>
<script src="~/Scripts/DatePicker/bootstrap-datepicker.min.js"></script>
<link href="~/Scripts/DatePicker/bootstrap-datepicker.min.css" rel="stylesheet" />
<script type="text/javascript">
        $(function () {
            $('#DateStart').datepicker({
                format: "mm/dd/yyyy"
            })
        })
</script>
<script type="text/javascript">
        $(function () {
            $('#DateEnd').datepicker({
                format: "mm/dd/yyyy"
            })
        })
</script>
    @Scripts.Render("~/bundles/jqueryval")
}