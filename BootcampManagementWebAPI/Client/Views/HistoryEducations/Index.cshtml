@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<div class="container">
    <hr />
    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#myModal" onclick="nuke();">Create New</button><br /><br /> @*kalau tombol ini di klik ntar ngeload otomatis dropdown suppliernya*@
    <table class="table table-hover" id="table">
        <thead>
            <tr>
                <th>
                    Degree
                </th>
                <th>
                    Study Program
                </th>
                <th>
                    Date Start
                </th>
                <th>
                    Date End
                </th>
                <th>
                    IPK
                </th>
                <th>
                    University
                </th>
                <th>
                    Student
                </th>
                <th>
                    Action
                </th>
            </tr>
        </thead>
        <tbody class="tbody"></tbody>
    </table>
</div>
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">×</button>
                <h4 class="modal-title" id="myModalLabel">District Form</h4>
            </div>
            <div class="modal-body">
                <form>
                    <div class="form-group">
                        <label for="Id">Id</label>
                        <input type="text" class="form-control" id="Id" placeholder="Id" disabled="disabled" />
                    </div>
                    <div class="form-group">
                        <label for="Degree">Degree</label>
                        <input type="text" class="form-control" id="Degree" placeholder="Degree" />
                        <span style="color:red" class="error">Valid Degree required</span>
                    </div>
                    <div class="form-group">
                        <label for="StudyProgram">Study Program</label>
                        <input type="text" class="form-control" id="StudyProgram" placeholder="StudyProgram" />
                        <span style="color:red" class="error">Valid Study Program required</span>
                    </div>
                    <div class="form-group">
                        <label for="DateStart">Date Start</label>
                        <input type="text" class="form-control" id="DateStart" maxlength="10" placeholder="DateStart" />
                        <span style="color:red" class="error">Valid Date Start required (ex: mm/dd/yyyy)</span>
                    </div>
                    <div class="form-group">
                        <label for="DateEnd">Date End</label>
                        <input type="text" class="form-control" id="DateEnd" maxlength="10" placeholder="DateEnd" />
                        <span style="color:red" class="error">Valid Date End required (ex: mm/dd/yyyy)</span>
                    </div>
                    <div class="form-group">
                        <label for="Ipk">IPK</label>
                        <input type="text" class="form-control" id="Ipk" placeholder="Ipk" />
                        <span style="color:red" class="error">Valid Ipk required</span>
                    </div>
                    <div class="form-group">
                        <label for="Universities_Id">University</label>
                        <select id="University" data-placement="Choose University" class="form-control">
                            <option>Select</option>
                        </select>
                        <span style="color:red" class="error">Select University</span>
                    </div>
                    <div class="form-group">
                        <label for="Students_Id">Student</label>
                        <select id="Student" data-placement="Choose Student" class="form-control">
                            <option>Select</option>
                        </select>
                        <span style="color:red" class="error">Select Student</span>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" id="Save" onclick="validationInsert();">Save</button>
                <button type="button" class="btn btn-primary" id="Update" style="display:none;" onclick="validationUpdate();">Update</button>
                <button type="button" class="btn btn-default" onclick="nuke();" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <script src="~/Scripts/SweetAlert/sweetalert.min.js"></script>
    <link href="~/Scripts/SweetAlert/sweetalert.css" rel="stylesheet" />
    <script src="~/Scripts/DataTable/jquery.dataTables.min.js"></script>
    <link href="~/Scripts/DataTable/jquery.dataTables.min.css" rel="stylesheet" />
    <script src="~/Scripts/DatePicker/bootstrap-datepicker.min.js"></script>
    <link href="~/Scripts/DatePicker/bootstrap-datepicker.min.css" rel="stylesheet" />
    <script src="~/Scripts/Retrieves/RetrievingHistoryEducation.js"></script>
    <script type="text/javascript">
        $(function () {
            $('#DateStart').datepicker({
                format: "mm/dd/yyyy"
            })
        })
        $(function () {
            $('#DateEnd').datepicker({
                format: "mm/dd/yyyy"
            })
        })
    </script>
    @Scripts.Render("~/bundles/jqueryval")
}