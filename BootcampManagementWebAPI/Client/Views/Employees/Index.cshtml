@{
    ViewBag.Title = "Index";
    Layout="~/Views/Shared/HR.cshtml";
}

<h2>Index</h2>

<div class="container">
    <hr />
    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#myModal" onclick="nuke();">Create New</button><br /><br /> @*kalau tombol ini di klik ntar ngeload otomatis dropdown suppliernya*@
    <table class="table table-hover" id="table">
        <thead>
            <tr>
                <th>
                    First Name
                </th>
                <th>
                    Last Name
                </th>
                <th>
                    Date of Birth
                </th>
                <th>
                    Place of Birth
                </th>
                <th>
                    Gender
                </th>
                <th>
                    Address
                </th>
                <th>
                    Phone 
                <th>
                    Email
                </th>
                <th>
                    Role
                </th>
                <th>
                    Religion
                </th>
                <th>
                    Village
                </th>
                <th>
                    Action
                </th>
            </tr>
        </thead>
        <tbody class="tbody"></tbody>
    </table>
</div>
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">×</button>
                <h4 class="modal-title" id="myModalLabel">Employee Form</h4>
            </div>
            <div class="modal-body">
                <form>
                    <div class="form-group">
                        <label for="Id">Id</label>
                        <input type="text" class="form-control" id="Id" placeholder="Id" disabled="disabled" />
                    </div>
                    <div class="form-group">
                        <label for="First_Name">First Name</label>
                        <input type="text" class="form-control" id="First_Name" placeholder="First_Name" />
                        <span style="color:red" class="error">Valid First Name required</span>
                    </div>
                    <div class="form-group">
                        <label for="Last_Name">Last Name</label>
                        <input type="text" class="form-control" id="Last_Name" placeholder="Last_Name" />
                        <span style="color:red" class="error">Valid Last Name required</span>
                    </div>
                    <div class="form-group">
                        <label for="Date_Of_Birth">Date of Birth</label>
                        <input type="text" class="form-control" id="Date_Of_Birth" maxlength="10" placeholder="Last_Name" />
                        <span style="color:red" class="error">Valid Date of Birth required (ex: dd/mm/yyyy)</span>
                    </div>
                    <div class="form-group">
                        <label for="Place_Of_Birth">Place of Birth</label>
                        <input type="text" class="form-control" id="Place_Of_Birth" placeholder="Place_Of_Birth" />
                        <span style="color:red" class="error">Valid Place of Birth required</span>
                    </div>
                    <label for="Gender">Gender</label>
                    <br />
                    <div class="btn-group" data-toggle="buttons" id="Gender">
                        <label class="btn btn-primary">
                            <input type="radio" name="radButton" id="Male" value="1"> Male
                        </label>
                        <label class="btn btn-primary">
                            <input type="radio" name="radButton" id="Female" value="2"> Female
                        </label>
                        <br />
                        <span style="color:red" class="error">Choose the gender</span>
                    </div>
                    <div class="form-group">
                        <br />
                        <label for="Address">Address</label>
                        <input type="text" class="form-control" id="Address" placeholder="Address" />
                        <span style="color:red" class="error">Valid Address required</span>
                    </div>
                    <div class="form-group">
                        <label for="Phone">Phone</label>
                        <input type="number" class="form-control" id="Phone" maxlength="13" placeholder="Phone" />
                        <span style="color:red" class="error">Valid Phone required</span>
                    </div>
                    <div class="form-group">
                        <label for="Email">Email</label>
                        <input type="text" class="form-control" id="Email" placeholder="Email" />
                        <span style="color:red" class="error">Valid Email required</span>
                    </div>
                    <div class="form-group">
                        <label for="Role">Role</label>
                        <input type="text" class="form-control" id="Role" placeholder="Role" />
                        <span style="color:red" class="error">Valid Role required</span>
                    </div>
                    <div class="form-group">
                        <label for="Villages_Id">Village</label>
                        <select id="Village" data-placement="Choose Village" class="form-control">
                            <option>Select</option>
                        </select>
                        <span style="color:red" class="error">Select Village</span>
                    </div>
                    <div class="form-group">
                        <label for="Religions_Id">Religion</label>
                        <select id="Religion" data-placement="Choose Religion" class="form-control">
                            <option>Select</option>
                        </select>
                        <span style="color:red" class="error">Select Religion</span>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" id="Save" onclick="validationInsert();">Save</button>
                <button type="button" class="btn btn-primary" id="Update" style="display:none;" onclick="validationUpdate();">Update</button>
                <button type="button" class="btn btn-default" onclick="nuke();" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <script src="~/Scripts/SweetAlert/sweetalert.min.js"></script>
    <link href="~/Scripts/SweetAlert/sweetalert.css" rel="stylesheet" />
    <script src="~/Scripts/DataTable/jquery.dataTables.min.js"></script>
    <link href="~/Scripts/DataTable/jquery.dataTables.min.css" rel="stylesheet" />
    <script src="~/Scripts/DatePicker/bootstrap-datepicker.min.js"></script>
    <link href="~/Scripts/DatePicker/bootstrap-datepicker.min.css" rel="stylesheet" />
    <script src="~/Scripts/Retrieves/RetrievingEmployee.js"></script>
    <script type="text/javascript">
        $(function () {
            $('#Date_Of_Birth').datepicker({
                format: "mm/dd/yyyy"
            })
        })
    </script>
    
    @Scripts.Render("~/bundles/jqueryval")
}

